<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cloud_repeat"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/plant_image"
        android:layout_width="100dip"
        android:layout_height="200dip"
        android:layout_alignParentLeft="true"
        
        android:layout_marginLeft="40dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        
        android:src="@drawable/demo_plant"/>

    <LinearLayout
        android:id="@+id/command_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/plant_image"
        android:layout_alignParentRight="true"

        android:layout_marginRight="40dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/note_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dip"
            android:text="@string/plant_note" />

        <Button
            android:id="@+id/water_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dip"
            android:text="@string/plant_water" />

        <Button
            android:id="@+id/trim_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dip"
            android:text="@string/plant_trim" />

        <Button
            android:id="@+id/archive_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dip"
            android:text="@string/plant_archive" />
    </LinearLayout>

    <!-- Clickable title -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/plant_image"
        android:background="@color/light_teal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/show_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/faded_teal"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dip"
            android:text="@string/show_info" />

        <TextView
            android:id="@+id/info_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/faded_teal"
            android:minLines="5"
            android:padding="10dip"
            android:visibility="gone" />

        <ListView
            android:id="@+id/notes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="300dip" />
    </LinearLayout>

</RelativeLayout>