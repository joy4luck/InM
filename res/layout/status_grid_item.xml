<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="5dip" >
    
    
    <!-- Name of individual with status -->
    <TextView
        android:id="@+id/status_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#EEE"
        android:typeface="sans"
        android:textSize="15sp"
        android:textStyle="bold"/>
 
    <!--  The status image, which is two overlaid -->
    <RelativeLayout android:id="@+id/status_icon_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip">
 
        <ImageView
            android:id="@+id/status_mood_icon"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:src="@drawable/ic_launcher"/>
        
        <ImageView
            android:id="@+id/status_avail_icon"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:src="@drawable/ic_launcher"/>
 
    </RelativeLayout>

    <!-- Briefing -->
    <TextView
        android:id="@+id/status_briefing"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#CCC"
        android:textSize="12sp"
        android:layout_marginTop="1dip"/>
</LinearLayout>